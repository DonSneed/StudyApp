<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studyapp.MainMenueController">
   <children>
      <Label fx:id="header" layoutY="90.0" prefHeight="18.0" prefWidth="600.0" text="Willkommen">
         <font>
            <Font name="Lucida Console" size="20.0" />
         </font>
      </Label>
      <MenuBar layoutY="1.0" prefHeight="26.0" prefWidth="600.0">
        <menus>
          <Menu fx:id="ThemaButton" mnemonicParsing="false" text="Thema">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#editTopic" text="Themen bearbeiten" />
                  <MenuItem mnemonicParsing="false" onAction="#enterTopic" text="Neues Thema anlegen" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="User">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
                  <MenuItem mnemonicParsing="false" text="Passwort ändern" />
                  <MenuItem mnemonicParsing="false" onAction="#abmelden" text="abmelden" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TextField fx:id="addTopicField" layoutX="182.0" layoutY="210.0" visible="false" />
      <Label fx:id="addTopicLabel" layoutX="182.0" layoutY="136.0" prefHeight="61.0" prefWidth="260.0" text="Themenname eingeben: " textAlignment="CENTER" visible="false" />
      <Button fx:id="hinzufuegenB" layoutX="219.0" layoutY="252.0" mnemonicParsing="false" onAction="#addTopic" text="hinzufügen" visible="false" />
      <Spinner fx:id="topicSpinner" layoutX="14.0" layoutY="210.0" />
      <Label layoutX="14.0" layoutY="185.0" prefHeight="26.0" prefWidth="70.0" text="Thema:">
         <font>
            <Font name="Lucida Console" size="12.0" />
         </font>
      </Label>
      <Button fx:id="editFKB" layoutX="206.0" layoutY="210.0" mnemonicParsing="false" onAction="#goFKScreen" text="Fragenkatalog bearbeiten" visible="false" />
      <Button fx:id="deleteTopicB" layoutX="206.0" layoutY="252.0" mnemonicParsing="false" onAction="#deleteTopic" text="Thema löschen" visible="false" />
      <Button fx:id="deleteTopicBY" layoutX="193.0" layoutY="265.0" mnemonicParsing="false" onAction="#confirmDelTopic" text="Ja" visible="false" />
      <Button fx:id="deleteTopicBN" layoutX="321.0" layoutY="265.0" mnemonicParsing="false" onAction="#cancelDelTopic" text="Nein" visible="false" />
   </children>
</AnchorPane>
